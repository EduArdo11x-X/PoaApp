<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permiso para acceder a Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PoaApp"
        tools:targetApi="31">
         <!-- Actividad de inicio de sesión -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"> <!-- Se añade exported="true" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Actividad de registro -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".RegisterUnidadActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterCarreraActivity"
            android:exported="false" />
        <!-- Otras actividades -->
        <activity
            android:name=".ListaCarrera"
            android:exported="false" />
        <activity
            android:name=".ListaUsuarios"
            android:exported="false" />
        <activity
            android:name=".ListaRoles"
            android:exported="false" />
        <activity
            android:name=".ListaUnidad"
            android:exported="false" /> <!-- Actividad principal después del inicio de sesión -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>